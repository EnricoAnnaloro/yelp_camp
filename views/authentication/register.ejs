<%- include("../partials/header") %> 

<div class="register-content">
  <div class="container text-center">
    <div id="register-form">
      <div class="row">
        <div class="col-md-11">
          <h1 class="mt-5">Register Account</h1>
        </div>
      </div>
      <form class="mt-3" accept="/register" method="POST">
        <div class="row">
          <div class="col-md-11">
            <input type="text" class="form-col-md-11 form-control text-center" name="username" placeholder="Username" required>
          </div>
          <div class="col-md-1 text-left pl-0">
            <small id="emailHelp" class="form-col-md-1 form-text text-muted">*</small>
          </div>
          <div class="col-md-11">
            <input type="password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" class="form-control text-center" id="exampleInputPassword1" name="password" placeholder="Password" required>
            <small id="emailHelp" class="form-text">(Password should contain a combination of upper case letter, lower case letter and numbers)</small>
          </div>
          <div class="col-md-1 text-left pl-0">
            <small id="emailHelp" class="form-col-md-1 form-text text-muted">*</small>
          </div>
        </div>
        <div class="row">
          <div class="col-md-11">
            <button type="submit" class="btn btn-primary text-center mt-4 btn-block" id="reg-button">Register</button>        
          </div>
        </div>          
      </form>
    </div>
  </div>
  <div class="bgOverlay"></div>
</div>


