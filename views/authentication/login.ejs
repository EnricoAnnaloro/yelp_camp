<%- include("../partials/header") %> 

<div class="container text-center">
    <div class="container">
        <h1 class="mt-5">Account Login</h1>
        <form class="mt-3" accept="/login" method="POST">
            <div class="form-group row">
                <input type="text" class="form-control text-center" name="username" placeholder="Username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control text-center" id="exampleInputPassword1" name="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
        <p class="text-center mt-3">New User? <a href="/register">Register here!</a></p>
    </div>
</div>




